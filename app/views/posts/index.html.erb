<% provide(:title, "Blogs Page")%>

<p id="notice"><%= notice %></p>

<div class="jumbotron indexPicture">
  <div class="container text-center">
    <h1>POSTS</h1>      
    <p>Welcome to all my blog posts! </p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post %></h5>
              <p class="card-text"><%= truncate(post.content, length: 100) { link_to "Continue", post } %></p>
              <p><%= post.date.to_s(:long) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">2 mins</small>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

